{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/enum/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noUnusedParameters": false, // 关闭未使用参数检查
    "noUnusedLocals": false,      // 关闭未使用局部变量检查
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@enum/*": [
        "src/enum/*"
      ]
    }
  }
}
